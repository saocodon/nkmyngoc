<UserControl x:Class="NhakhoaMyNgoc.UserControls.NewEditDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NhakhoaMyNgoc.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="33" d:DesignWidth="95">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <!-- Thêm -->
        <Button Foreground="#208c20" FontFamily="Segoe MDL2 Assets" Content="&#xE710;" Command="{Binding StartAddNewCommand}" />
        <!-- Sửa -->
        <Button Grid.Column="1" Foreground="#006bbd" FontFamily="Segoe MDL2 Assets" Content="&#xE74E;" Command="{Binding SaveCommand}"/>
        <!-- Xóa -->
        <Button Grid.Column="2" Foreground="#c80f21" FontFamily="Segoe MDL2 Assets" Content="&#xE74D;" Command="{Binding DeleteCommand}"/>
    </Grid>
</UserControl>
