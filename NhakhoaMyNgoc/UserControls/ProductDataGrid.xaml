<UserControl x:Class="NhakhoaMyNgoc.UserControls.ProductDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NhakhoaMyNgoc.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid
            ItemsSource="{Binding Products}"
            SelectedItem="{Binding SelectedProduct}"
            AutoGenerateColumns="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã VL" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Tên" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" />
                <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" />
                <DataGridTextColumn Header="Tổng cộng" Binding="{Binding Total, StringFormat=N0}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
